<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="contact_template_lafeixa" inherit_id="easy_my_coop_website.contact_template" name="contact_template">
            <!-- Hide language select -->
            <xpath expr="//label[@for='lang']/.." position="attributes">
                <attribute name="hidden">1</attribute>
	    </xpath>
            <xpath expr="//select[@name='gender']" position="before">
                <div>
                    <p style="font-size: 0.7rem">Dada d’interès per poder realitzar el Balanç Social de la XES.</p>
                </div>
            </xpath>
         </template>
	 <template id="iban_template_lafeixa" inherit_id="easy_my_coop_es_website.iban_template_es">
            <xpath expr="//label[@for='iban']" position="after">
                <div>
                    <p style="font-size: 0.7rem">Número de Compte Bancari Internacional (Exemple IBAN: ES11 2222 3333 4444 5555 6666). Aquest compte corrent ens servirà per girar-te les quotes mensuals (en cas que no esdevinguis sòcia activa).</p>
                </div>
	    </xpath>
         </template>
	 <template id="shares_template_lafeixa" inherit_id="easy_my_coop_website.shares_template">
	    <xpath expr="//label[@for='ordered_parts']/.." position="attributes">
              <attribute name="hidden">1</attribute>
	    </xpath>
	    <xpath expr="//label[@for='total_parts']/.." position="attributes">
	      <attribute name="hidden">1</attribute>
	    </xpath>
	    <xpath expr="//div[@name='share_div']" position="after">
	     <div t-attf-class="form-group #{error and 'discovery_channel' in error and 'has-error' or ''}">
	       <label for="discovery_channel">Com ens has conegut?</label>
	       <select name="discovery_channel" class="form-control" required="True" style="width:54%;">
		 <option value=""/>
		 <t t-foreach="channels or []" t-as="type">
		   <option t-att-value="type[0]" t-att-selected="type[0] == channel">
		     <t t-esc="type[1]"/>
		   </option>
		 </t>
	       </select>
	     </div>
	     <div id="newsletter_approved" t-attf-class="form-group">
	       <label for="newsletter_approved">Estàs d'acord en rebre informació per correu electrònic?</label>
	       <div>
		 <div class="checkbox">
		   <label>
		     <input type="checkbox" name="newsletter_approved" t-att-checked="newsletter_approved"/>
		   </label>
		 </div>
	       </div>
	     </div>
	     <div id="sepa_approved" t-attf-class="form-group" t-if="display_sepa">
	       <label for="sepa_approved">Autorització SEPA</label>
	       <div>
		 <div class="checkbox">
		   <label>
		     <input type="checkbox" name="sepa_approved" t-att-checked="sepa_approved"/>
		     <t t-raw="sepa_text"/>
		   </label>
		 </div>
	       </div>
	     </div>
	   </xpath>
         </template>
    </data>
</odoo>
