# Default task list for {{ project }}
{% set job_configs = [
    {"script": "single_job.sh", "task_id": "test"},
    {"script": "single_job.sh", "task_id": "task_1"},
    {"script": "single_job.sh", "task_id": "task_2"},
    {"script": "single_job.sh", "task_id": "task_3"}
] %}
{%- for config in job_configs %}
- script: {{ working_dir }}/{{ config.script }}
  inputs: /eos/juno/esd/test
  args:
    {% if config.task_id == "test" -%}
    - "{{ config.task_id }}.root"
    - "--evtmax"
    - "200"
    {%- else -%}
    - "{{ config.task_id }}.root"
    {%- endif %}
  task_id: {{ config.task_id }}
{%- endfor %}
