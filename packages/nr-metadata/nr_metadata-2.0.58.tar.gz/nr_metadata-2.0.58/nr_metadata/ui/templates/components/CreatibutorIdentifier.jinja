{#def identifiers=None, creatibutorName #}
{%if identifiers | length > 0%}
  {% set selected_identifier = None %}

  {% for identifier in identifiers %}
    {% set current_scheme = identifier.scheme.lower() %}
    {% if current_scheme == "orcid" %}
      {% set selected_identifier = identifier %}
    {% elif current_scheme == "ror" %}
      {% set selected_identifier = identifier %}
    {% endif %}
  {% endfor %}

  {% if not selected_identifier %}
    {% set selected_identifier = identifiers[0] %}
  {% endif %}
  <IdentifierBadge identifier={selected_identifier} creatibutorName={creatibutorName} />
{% endif %}
