# GitHub Configuration
# Gere seu token em https://github.com/settings/tokens
# Escopos necessários: repo, workflow, write:packages
GITHUB_TOKEN=your_github_token_here
GITHUB_USERNAME=your_github_username
GITHUB_EMAIL=your_github_email@example.com

# Discord Configuration
# Crie um webhook em seu servidor Discord:
# Server Settings > Integrations > Webhooks > New Webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# Application Configuration
APP_ENV=development  # development, staging, production
DEBUG=True
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Workspace Configuration
WORKSPACE_ROOT=/tmp/refactool  # Diretório base para workspaces
WORKSPACE_RETENTION_HOURS=24   # Tempo de retenção dos workspaces em horas

# VCS Provider Configuration
DEFAULT_BRANCH=main  # Branch padrão para novos repositórios
PR_PREFIX=refactool  # Prefixo para branches de PR (ex: refactool/changes_*)

# Security Configuration
WEBHOOK_SECRET=your_webhook_secret_here  # Segredo para assinatura de webhooks
MAX_FILE_SIZE=10485760  # Tamanho máximo de arquivo em bytes (10MB) 