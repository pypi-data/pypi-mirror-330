{% extends "inc/base.j2" %}
{% block content %}
  <div>

    <nav>
      <ul>
        <li><h3>dvalue</h3></li>
        <li><a href="/api/system/dvalue/toml">view</a></li>
      </ul>
    </nav>
  </div>

  <table>
    <thead>
    <tr>
      <th>key</th>
      <th>value</th>
      <th>persistent</th>
      <th>toml</th>
      <th>update</th>
      <th>view</th>
    </tr>
    </thead>
    <tbody>
    {% for key, value in dvalue.items() %}
      <tr>
        <td title="{{ dvalue.descriptions[key] | escape }}">{{ key }}</td>
        <td>
          {{ value | string | truncate(119) }}
        </td>
        <td>{{ dvalue.persistent[key] | yes_no }}</td>
        <td><a href="/api/system/dvalues/{{ key }}/toml">toml</a></td>
        <td><a href="/update-dvalue/{{ key }}">update</a></td>
        <td>
          {% if dvalue.persistent[key] %}
            <a href="/api/system/dvalues/{{ key }}">db</a>
          {% endif %}
          <a href="/api/system/dvalues/{{ key }}/value">value</a>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>



{% endblock %}
