{% assign title = site.title %}
{%- if page.title -%}
{% assign title = page.title | append: " | " | append: site.title  %}
{%- endif -%}
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<base href="{{ site.base_url | default: "/" }}">
<title>
{{- title -}}
</title>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="preload" href="https://fonts.googleapis.com/css2?family=Share+Tech+Mono&display=block" rel="stylesheet">
<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/pygments.css">
<link rel="alternate" type="application/rss+xml" href="/rss.xml" />
<link rel="alternate" type="application/atom+xml" href="/atom.xml" />
<meta name="twitter:card" content="summary">
<meta name="twitter:title" content="{{ title }}">
<meta property="og:title" content="{{ title }}">
<meta property="og:type" content="website">
{%- if site.base_url %}
<meta property="og:url" content="{{site.base_url}}{{ page.link }}">
{%- endif -%}
{%- if page.blurb %}
<meta name="twitter:description" content="{{ page.blurb }}">
<meta property="og:description" content="{{ page.blurb }}">
{%- endif -%}
{%- if page.image %}
<meta name="twitter:image" content="{{ page.image }}">
<meta property="og:image" content="{{ page.image }}">
{% endif -%}
